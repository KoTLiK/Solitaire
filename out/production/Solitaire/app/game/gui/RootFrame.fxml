<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane id="contentPane" fx:id="contentPane" prefHeight="260.0" prefWidth="220.0" stylesheets="@../../../resources/root.css"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.game.gui.RootController">
    <Label id="title" fx:id="title" alignment="CENTER" prefHeight="70.0" prefWidth="300.0" text="SOLITAIRE"
           textAlignment="CENTER" textFill="WHITE" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
           AnchorPane.topAnchor="0.0">
        <font>
            <Font name="System" size="20.0"/>
        </font>
    </Label>
    <Button id="newGame" fx:id="btn_newGame" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
            onAction="#btn_newGame_click" prefHeight="25.0" prefWidth="130.0" styleClass="flatButton"
            stylesheets="@../../../resources/root.css" text="New Game" textFill="WHITE" AnchorPane.leftAnchor="45.0"
            AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="80.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button id="loadGame" fx:id="btn_loadGame" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
            onAction="#btn_loadGame_click" prefHeight="25.0" prefWidth="130.0" styleClass="flatButton"
            stylesheets="@../../../resources/root.css" text="Load Game" textFill="WHITE" AnchorPane.leftAnchor="45.0"
            AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="130.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button id="exitGame" fx:id="btn_exitGame" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
            onAction="#btn_exitGame_click" prefHeight="25.0" prefWidth="130.0" styleClass="flatButton"
            stylesheets="@../../../resources/root.css" text="Exit Game" textFill="WHITE" AnchorPane.leftAnchor="45.0"
            AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="180.0">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
</AnchorPane>
