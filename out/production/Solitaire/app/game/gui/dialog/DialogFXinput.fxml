<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" style="-fx-background-color: #292E37" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.game.gui.dialog.DialogFXController">
    <VBox prefHeight="130.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0">
            <Label fx:id="title" prefHeight="30.0" prefWidth="260.0" text="Title" textFill="WHITE">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
                <padding>
                    <Insets left="10.0"/>
                </padding>
                <font>
                    <Font name="Arial Black" size="12.0"/>
                </font>
            </Label>
            <Button id="btn_close" fx:id="btnClose" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0"
                    text="x">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
                <padding>
                    <Insets bottom="3.0"/>
                </padding>
            </Button>
        </HBox>
        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: #3e424b;">
            <VBox prefHeight="97.0" prefWidth="300.0">
                <HBox prefHeight="75.0" prefWidth="300.0" style="-fx-background-color: #3e424b;">
                    <BorderPane prefHeight="75.0" prefWidth="85.0">
                        <center>
                            <ImageView fx:id="icon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true"
                                       preserveRatio="true" BorderPane.alignment="CENTER"/>
                        </center>
                        <opaqueInsets>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </opaqueInsets>
                    </BorderPane>
                    <VBox prefHeight="75.0" prefWidth="215.0">
                        <Label fx:id="message" prefHeight="36.0" prefWidth="185.0" text="Message"
                               textFill="WHITE"/>
                        <TextField fx:id="textField" prefHeight="25.0" prefWidth="185.0" promptText="Input">
                            <VBox.margin>
                                <Insets bottom="5.0" right="30.0"/>
                            </VBox.margin>
                        </TextField>
                    </VBox>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="300.0">
                    <VBox prefHeight="42.0" prefWidth="300.0">
                        <HBox id="buttonHBox" fx:id="buttonHBox" alignment="CENTER_RIGHT"
                              prefHeight="100.0" prefWidth="200.0">
                            <VBox.margin>
                                <Insets right="6.0"/>
                            </VBox.margin>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </Pane>
    </VBox>
</AnchorPane>
